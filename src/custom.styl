// custom css
// support stylus
.rc-has-dd
  height auto
  width 132px
  &:hover
    height 28px
.call-with-ringccentral-btn
  height 28px
.infoBlock > .call-with-ringccentral-btn
  margin-bottom 10px
.rc-contact-panel
  width calc(100% + 80px)
  z-index 9998
  top 50px
  &.rc-hide-to-side
    left calc(-100% - 80px)
.rc-close-box
  height 50px
  line-height 50px
  font-size 18px
  right 0
  width auto
.rc-third-party-contact-frame
  position static
  width calc(100% + 80px)
.rc-third-party-contact-frame-box
  width calc(100% + 80px)
  height 100%
  overflow scroll
.rc-reloading-deals
.rc-reloading-contacts
  position fixed
  display inline-block
  left 0
  bottom 0
  padding 5px
  background #ffffff
  border-radius 0 3px 3px 0
  z-index 20
  box-shadow 0px 0px 3px 3px rgba(0,0,0,0.35)
.rc-reloading-contacts
  z-index 12000
#Pipedrive-rc
  overflow visible
  b
  .bold
    font-weight bold
*[class*="ant-"].ant-notification
  z-index 12000
.rc-wordbreak
  word-break break-all
.rc-elli
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
.flex
  display flex
  .rc-input
    width 100%
  .flex-item
    flex-grow 1
.flex-item + .flex-item
  margin-left 2%